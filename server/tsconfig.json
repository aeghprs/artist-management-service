{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodeNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "types": ["node"],
    
  },
  "include": ["src/**/*",],
  "exclude": ["node_modules"]
}
